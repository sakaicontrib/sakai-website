---
import SectionPageLayout from "../layouts/SectionPageLayout.astro";

const capabilityGroups = [
  {
    title: "Standards And Interoperability",
    description:
      "Sakai is designed for standards-based interoperability across enterprise LMS ecosystems and external tools.",
    items: [
      {
        title: "LTI 1.3 And LTI Advantage",
        detail:
          "Sakai supports IMS LTI 1.3 and LTI Advantage workflows, including dynamic registration paths used in modern tool provisioning."
      },
      {
        title: "IMS QTI 1.2 Import And Export",
        detail:
          "Tests and question pools support IMS QTI 1.2 import/export paths for interoperable assessment content exchange."
      },
      {
        title: "API-Driven Integrations",
        detail:
          "Sakai provides broad API and extension surfaces so institutions can integrate third-party systems and local services."
      }
    ]
  },
  {
    title: "Teaching And Course Delivery",
    description:
      "Sakai tools are built for instructional flow, not just content storage, with flexible pathways for different pedagogies.",
    items: [
      {
        title: "Lessons With Conditional Release",
        detail:
          "Lessons supports prerequisites, required items, and staged progression so instructors can control sequencing and readiness."
      },
      {
        title: "Group-Aware Learning Paths",
        detail:
          "Content and activities can be restricted by group, supporting section-based delivery and differentiated instruction."
      },
      {
        title: "Integrated Teaching Toolset",
        detail:
          "Assignments, Tests and Quizzes, Discussions, Resources, and Lessons are coordinated for full-course delivery."
      }
    ]
  },
  {
    title: "Assessment And Gradebook Depth",
    description:
      "Sakai supports formative and high-stakes assessment workflows with strong grading controls for complex programs.",
    items: [
      {
        title: "High-Stakes Assessments",
        detail:
          "Timed assessment handling includes automatic submission controls, and secure delivery extensions support high-security delivery scenarios."
      },
      {
        title: "Weighted Grades And Category Rules",
        detail:
          "Gradebook supports categories and weighting, drop/keep logic, and instructor controls needed for institutional grading policies."
      },
      {
        title: "PDF Export Workflows",
        detail:
          "Sakai includes printer-friendly PDF export paths, including individual student grade views and calendar PDF output."
      }
    ]
  },
  {
    title: "Identity, Access, And Enterprise Integration",
    description:
      "Sakai can be aligned with institutional identity and directory infrastructure in higher education environments.",
    items: [
      {
        title: "SAML And CAS Authentication",
        detail:
          "Sakai includes SAML and CAS login integration paths for institution-managed single sign-on strategies."
      },
      {
        title: "Directory Integration Providers",
        detail:
          "Provider modules support enterprise directory patterns including LDAP/UnboundID and Kerberos-based integrations."
      },
      {
        title: "Active Directory And Azure AD Workflows",
        detail:
          "Microsoft ecosystem integrations include Azure Active Directory setup patterns, such as Teams-linked meetings workflows."
      }
    ]
  }
];

const featureIndexTerms = [
  "IMS QTI 1.2 support",
  "LTI 1.3 support",
  "LTI Advantage",
  "LTI dynamic registration",
  "Lessons tool",
  "Conditional release",
  "Prerequisites and required items",
  "Weighted gradebook categories",
  "High-stakes assessments",
  "Timed assessment auto-submit",
  "PDF grade export",
  "SAML login",
  "CAS login",
  "LDAP directory integration",
  "Kerberos authentication",
  "Azure AD integration",
  "Active Directory workflows"
];

const withBase = (path: string) =>
  `${import.meta.env.BASE_URL.replace(/\/$/, "")}/${path.replace(/^\/+/, "")}`;
---

<SectionPageLayout
  title="Sakai LMS Feature Reference | LTI 1.3, IMS QTI, Lessons, Weighted Grades, SAML"
  description="Comprehensive Sakai LMS feature reference covering IMS QTI 1.2, LTI 1.3, Lessons conditionals, weighted grades, high-stakes assessment, PDF export, SAML, and AD integration patterns."
  kicker="Feature Reference"
  heading="Comprehensive Sakai LMS Feature Reference"
>
  <article class="hard-border block-shadow-soft bg-[var(--sakai-paper)] p-6">
    <p class="text-lg leading-relaxed text-[var(--sakai-ink)]">
      Sakai is a full enterprise LMS with standards-based interoperability, deep teaching workflows, and institution-ready integration options.
    </p>
    <p class="mt-3 text-sm leading-relaxed text-[var(--sakai-ink-soft)]">
      This reference highlights capabilities institutions ask about most often when comparing Sakai with Canvas, D2L, and Moodle.
    </p>
  </article>

  <section class="grid gap-5">
    {capabilityGroups.map((group) => (
      <article class="hard-border block-shadow-soft bg-[var(--sakai-paper)] p-6">
        <h2 class="sans text-2xl font-black uppercase text-[var(--sakai-ink)] md:text-3xl">{group.title}</h2>
        <p class="mt-3 text-base leading-relaxed text-[var(--sakai-ink-soft)]">{group.description}</p>
        <div class="mt-4 grid gap-3 md:grid-cols-3">
          {group.items.map((item) => (
            <article class="hard-border bg-white p-4">
              <h3 class="sans text-base font-black uppercase text-[var(--sakai-ink)]">{item.title}</h3>
              <p class="mt-2 text-sm leading-relaxed text-[var(--sakai-ink-soft)]">{item.detail}</p>
            </article>
          ))}
        </div>
      </article>
    ))}
  </section>

  <section class="hard-border block-shadow-soft bg-[var(--sakai-paper)] p-6">
    <h2 class="sans text-2xl font-black uppercase text-[var(--sakai-ink)]">Capability Index For Evaluation And SEO</h2>
    <p class="mt-3 text-sm leading-relaxed text-[var(--sakai-ink-soft)]">
      Frequently searched LMS capability terms mapped to Sakai functionality.
    </p>
    <div class="mt-4 grid gap-2 sm:grid-cols-2 lg:grid-cols-3">
      {featureIndexTerms.map((term) => (
        <p class="hard-border bg-white px-3 py-2 text-sm font-medium text-[var(--sakai-ink)]">{term}</p>
      ))}
    </div>
  </section>

  <section class="hard-border block-shadow-soft bg-[var(--sakai-ink)] p-6 text-[var(--sakai-paper)]">
    <h2 class="sans text-2xl font-black uppercase">Implementation Paths</h2>
    <p class="mt-3 text-sm leading-relaxed text-[var(--sakai-paper)]/90">
      Start with feature evaluation, then move directly into deployment planning and technical validation.
    </p>
    <div class="mt-4 grid gap-3 md:grid-cols-4">
      <a href={withBase("/releases")} class="hard-border bg-[var(--sakai-paper)]/10 p-3 text-sm font-semibold">Release Notes And Branches</a>
      <a href={withBase("/resources")} class="hard-border bg-[var(--sakai-paper)]/10 p-3 text-sm font-semibold">User Docs And Reference Guides</a>
      <a href="https://github.com/sakaiproject/sakai" class="hard-border bg-[var(--sakai-paper)]/10 p-3 text-sm font-semibold">Source Code And Architecture</a>
      <a href={withBase("/try-sakai-lms-free")} class="hard-border bg-[var(--sakai-paper)]/10 p-3 text-sm font-semibold">Optional Sandbox Evaluation</a>
    </div>
    <p class="mt-4 text-xs text-[var(--sakai-paper)]/80">
      Feature availability can vary by release line, local configuration, and institutional deployment choices.
    </p>
  </section>
</SectionPageLayout>

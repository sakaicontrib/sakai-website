---
import SectionPageLayout from "../layouts/SectionPageLayout.astro";

const highlights = [
  {
    title: "Communications And Collaboration",
    description:
      "Robust communication options and strong support for groups make it easier to keep in touch, learn together, and work in teams."
  },
  {
    title: "Grading And Assessment",
    description:
      "State-of-the-art grading and assessment features support high-stakes testing, formative assessment, assignments, rubric scoring, and fast grade entry."
  },
  {
    title: "Course Development And Delivery",
    description:
      "Create and organize text, resources, quizzes, assignments, links, media, and conditional release flows into coherent course modules."
  },
  {
    title: "Powerful System Administration",
    description:
      "Highly configurable roles and permissions help institutions match local business processes and manage users efficiently."
  },
  {
    title: "Community Contributed Tools",
    description:
      "Take advantage of Sakai-specific tools developed by community members and released for use outside the packaged release."
  },
  {
    title: "Integration With External Apps",
    description:
      "Sakai leads in IMS LTI implementation and offers an extensive API for deep native integrations with third-party applications."
  }
];

const videoTitles = [
  "Sakai 21 Dark Mode",
  "Sakai LMS - Product Promo Video",
  "Conversations Overview",
  "Sakai 22 Assignments",
  "Sakai 22 Gradebook",
  "Sakai 22 Lessons",
  "Sakai 22 Tests & Quizzes",
  "Sakai 23 - Features in Development"
];
---

<SectionPageLayout
  title="Sakai Features | Sakai LMS"
  description="Sakai includes exceptional online learning, teaching, and collaboration tools for higher education."
  kicker="Sakai Features"
  heading="Check Out Sakai's Best Features"
>
  <article class="hard-border block-shadow-soft bg-[var(--sakai-paper)] p-6">
    <p class="text-lg leading-relaxed text-[var(--sakai-ink)]">
      Sakai includes exceptional online learning, teaching, and collaboration tools built by educators and continuously refined by community institutions.
    </p>
  </article>

  <section class="grid gap-4 md:grid-cols-2">
    {highlights.map((item, index) => (
      <article class="hard-border block-shadow-soft bg-white p-5">
        <p class="sans text-xs font-extrabold uppercase tracking-[0.1em] text-[var(--sakai-terracotta)]">0{index + 1}</p>
        <h2 class="sans mt-2 text-2xl font-black uppercase text-[var(--sakai-ink)]">{item.title}</h2>
        <p class="mt-3 text-base leading-relaxed text-[var(--sakai-ink-soft)]">{item.description}</p>
      </article>
    ))}
  </section>

  <section class="hard-border block-shadow-soft bg-[var(--sakai-ink)] p-6 text-[var(--sakai-paper)]">
    <h2 class="sans text-2xl font-black uppercase">Sakai Feature Videos</h2>
    <p class="mt-2 text-sm text-[var(--sakai-paper)]/85">
      The legacy site includes a dedicated "Sakai Features" channel with walkthrough videos.
    </p>
    <ul class="mt-4 grid gap-2 md:grid-cols-2">
      {videoTitles.map((title) => (
        <li class="hard-border bg-[var(--sakai-paper)]/10 px-3 py-2 text-sm">{title}</li>
      ))}
    </ul>
    <a
      href="https://www.youtube.com/@SakaiCLE"
      class="sans mt-5 inline-block hard-border bg-[var(--sakai-paper)] px-4 py-2 text-xs font-bold uppercase tracking-[0.1em] text-[var(--sakai-ink)]"
    >
      View YouTube Channel
    </a>
  </section>
</SectionPageLayout>

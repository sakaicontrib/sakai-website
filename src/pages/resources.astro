---
import SectionPageLayout from "../layouts/SectionPageLayout.astro";
const withBase = (path: string) =>
  `${import.meta.env.BASE_URL.replace(/\/$/, "")}/${path.replace(/^\/+/, "")}`;

const resources = [
  {
    title: "Sakai Community Documentation",
    description:
      "Find step-by-step help on using Sakai's features and elements in the official user guides.",
    href: "https://sakai.screenstepslive.com/s/sakai_help/m/101295"
  },
  {
    title: "Sakai Confluence Wiki",
    description:
      "Connect with community members, contribute to the project, and track platform direction and deployment best practices.",
    href: "https://sakaiproject.atlassian.net/wiki/spaces/CONF/overview?mode=global"
  },
  {
    title: "Sakai YouTube Channel",
    description:
      "Watch feature walkthroughs, release highlights, and community sessions from the Sakai project.",
    href: "https://www.youtube.com/@SakaiCLE"
  },
  {
    title: "Sakai News Archive",
    description:
      "Read community stories, roadmap notes, and legacy announcement highlights from the Sakai news feed.",
    href: "/sakai-news"
  },
  {
    title: "Sakai Events",
    description:
      "Browse conference sessions, event highlights, and SakaiCon recordings from recent community events.",
    href: "/events"
  },
  {
    title: "Conference Resources",
    description:
      "Review EDUCAUSE and conference-oriented Sakai materials published for attendees and evaluators.",
    href: "/conference-resources"
  },
  {
    title: "Connect With Sakai",
    description:
      "Find official channels for source code, collaboration, social updates, and community participation.",
    href: "/connect"
  }
];
---

<SectionPageLayout
  title="Sakai Resources | Sakai LMS"
  description="Sakai provides community documentation, wiki resources, and videos to support effective learning environments."
  kicker="Sakai Resources"
  heading="Resources For Sakai Teams"
>
  <article class="hard-border block-shadow-soft bg-[var(--sakai-paper)] p-6">
    <p class="text-lg leading-relaxed text-[var(--sakai-ink)]">
      Sakai provides an array of resources, including a community wiki and user guides, as well as videos to help you create effective learning environments.
    </p>
  </article>

  <section class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
    {resources.map((resource) => (
      <a href={resource.href.startsWith("/") ? withBase(resource.href) : resource.href} class="hard-border block-shadow-soft bg-white p-5 transition hover:-translate-x-0.5 hover:-translate-y-0.5">
        <h2 class="sans text-xl font-black uppercase text-[var(--sakai-ink)]">{resource.title}</h2>
        <p class="mt-3 text-sm leading-relaxed text-[var(--sakai-ink-soft)]">{resource.description}</p>
      </a>
    ))}
    <a href={withBase("/accessibility/accessibility-strategy")} class="hard-border block-shadow-soft bg-white p-5 transition hover:-translate-x-0.5 hover:-translate-y-0.5">
      <h2 class="sans text-xl font-black uppercase text-[var(--sakai-ink)]">Accessibility Strategy</h2>
      <p class="mt-3 text-sm leading-relaxed text-[var(--sakai-ink-soft)]">
        Review Sakai's accessibility strategy, conformance reporting approach, and VPAT documentation links.
      </p>
    </a>
    <a href={withBase("/releases")} class="hard-border block-shadow-soft bg-white p-5 transition hover:-translate-x-0.5 hover:-translate-y-0.5">
      <h2 class="sans text-xl font-black uppercase text-[var(--sakai-ink)]">Releases And Versions</h2>
      <p class="mt-3 text-sm leading-relaxed text-[var(--sakai-ink-soft)]">
        Track current Sakai release lines, source distribution links, and version-specific technical resources.
      </p>
    </a>
    <a href={withBase("/videos")} class="hard-border block-shadow-soft bg-white p-5 transition hover:-translate-x-0.5 hover:-translate-y-0.5">
      <h2 class="sans text-xl font-black uppercase text-[var(--sakai-ink)]">Video Library</h2>
      <p class="mt-3 text-sm leading-relaxed text-[var(--sakai-ink-soft)]">
        Watch conference sessions and feature-oriented recordings from the Sakai community.
      </p>
    </a>
  </section>

  <section class="hard-border block-shadow-soft bg-[var(--sakai-ink)] p-6 text-[var(--sakai-paper)]">
    <h2 class="sans text-2xl font-black uppercase">Need Help With Sakai?</h2>
    <p class="mt-3 max-w-3xl text-sm leading-relaxed text-[var(--sakai-paper)]/90">
      The Sakai Community Documentation provides answers to common usage questions across core tools. The Sakai Confluence Wiki expands that with roadmap context,
      collaboration channels, and project-level guidance for implementers and contributors.
    </p>
  </section>
</SectionPageLayout>

---
import SectionPageLayout from "../layouts/SectionPageLayout.astro";

const formatDate = (value: string) =>
  new Date(value).toLocaleDateString("en-US", {
    year: "numeric",
    month: "short",
    day: "numeric"
  });

const posts = [
  {
    title: "Sakai Allows American Association of People with Disabilities (AAPD) to host 2021 Summer Internship",
    date: "2021-10-29T21:05:14.328Z",
    href: "https://www.sakailms.org/post/sakai-allows-american-association-of-people-with-disabilities-aapd-to-host-2021-summer-internship",
    excerpt:
      "AAPD implemented Sakai to convert its respected Summer Internship Program to a fully online program. Sakai LMS helped run the program at scale."
  },
  {
    title: "WHERE IS SAKAI GOING FROM 2022-2024?",
    date: "2021-03-24T23:32:59.743Z",
    href: "https://www.sakailms.org/post/sakai-roadmap-2022-24",
    excerpt:
      "Sakai's three-year strategic roadmap highlighted ongoing rapid innovation and institution-driven priorities."
  },
  {
    title: "Sakai Facilitates Food Bank Leadership Program During Pandemic",
    date: "2021-03-11T00:32:59.742Z",
    href: "https://www.sakailms.org/post/food-bank-leadership-program",
    excerpt:
      "LevelUp! used Sakai to train food bank leaders with online learning experiences during pandemic disruption."
  },
  {
    title: "#SakaiCon 2020 Wins Kudos for #Accessibility",
    date: "2021-01-21T00:32:59.741Z",
    href: "https://www.sakailms.org/post/kudos-for-accessibility",
    excerpt:
      "Sakai's annual online conference was recognized for strong accessibility support for presenters and attendees."
  },
  {
    title: "Alternative Assessment in Sakai: Part 3 - Portfolios and Peer Review",
    date: "2020-10-13T14:34:51.131Z",
    href: "https://www.sakailms.org/post/alternative-assessment-in-sakai-part-3-portfolios-and-peer-review",
    excerpt:
      "Portfolios and peer review strategies in Sakai were showcased as effective alternatives to high-stakes assessment."
  },
  {
    title: "Alternative Assessment in Sakai: Part 2 - Games and Interactive Activities",
    date: "2020-10-01T13:12:12.635Z",
    href: "https://www.sakailms.org/post/alternative-assessment-in-sakai-part-2-games-and-interactive-activities",
    excerpt:
      "Game-based and interactive activities were highlighted as methods to improve engagement and assessment outcomes."
  },
  {
    title: "Sakai Expands Beyond the Academy",
    date: "2020-09-25T19:18:40.111Z",
    href: "https://www.sakailms.org/post/sakai-expands-beyond-the-academy",
    excerpt:
      "Community stories documented Sakai's expansion into non-higher-ed teaching and workforce learning contexts."
  },
  {
    title: "Alternative Assessment Strategies in Sakai: Part 1",
    date: "2020-09-21T19:33:39.578Z",
    href: "https://www.sakailms.org/post/alternative-assessment-strategies-in-sakai-part-1",
    excerpt:
      "Part one introduced practical approaches for balancing summative exams with richer formative learning evidence."
  }
];
---

<SectionPageLayout
  title="Sakai News | Sakai LMS"
  description="News and announcements from the Sakai open-source LMS community."
  kicker="Sakai News"
  heading="Community Updates And Stories"
>
  <article class="hard-border block-shadow-soft bg-[var(--sakai-paper)] p-6">
    <p class="text-lg leading-relaxed text-[var(--sakai-ink)]">
      Legacy Sakai news highlights roadmap updates, conference stories, and institutional use cases across the community.
    </p>
  </article>

  <section class="grid gap-4 md:grid-cols-2">
    {posts.map((post) => (
      <a href={post.href} target="_blank" rel="noreferrer" class="hard-border block-shadow-soft bg-white p-5 transition hover:-translate-x-0.5 hover:-translate-y-0.5">
        <p class="sans text-xs font-black uppercase tracking-[0.1em] text-[var(--sakai-terracotta)]">{formatDate(post.date)}</p>
        <h2 class="sans mt-2 text-2xl font-black uppercase text-[var(--sakai-ink)]">{post.title}</h2>
        <p class="mt-3 text-sm leading-relaxed text-[var(--sakai-ink-soft)]">{post.excerpt}</p>
      </a>
    ))}
  </section>

  <section class="hard-border block-shadow-soft bg-[var(--sakai-ink)] p-6 text-[var(--sakai-paper)]">
    <h2 class="sans text-2xl font-black uppercase">Follow The Feed</h2>
    <p class="mt-2 text-sm text-[var(--sakai-paper)]/85">
      Subscribe to the Sakai RSS feed to track legacy updates and community news archives.
    </p>
    <a
      href="https://www.sakailms.org/blog-feed.xml"
      target="_blank"
      rel="noreferrer"
      class="sans mt-4 inline-block hard-border bg-[var(--sakai-paper)] px-4 py-2 text-xs font-bold uppercase tracking-[0.1em] text-[var(--sakai-ink)]"
    >
      Open RSS Feed
    </a>
  </section>
</SectionPageLayout>

---
import SectionPageLayout from "../layouts/SectionPageLayout.astro";
const withBase = (path: string) =>
  `${import.meta.env.BASE_URL.replace(/\/$/, "")}/${path.replace(/^\/+/, "")}`;

const resources = [
  {
    title: "EDUCAUSE 2022 Resource Packet",
    description: "Conference handout packet published on the legacy Sakai site.",
    href: "https://www.sakailms.org/_files/ugd/a0aa54_2ac48ea8be0b4cefb9b12670bbf51e53.pdf"
  },
  {
    title: "EDUCAUSE 2022 Session Materials",
    description: "Additional session-support materials published for conference attendees.",
    href: "https://www.sakailms.org/_files/ugd/a0aa54_f5fe910d32c84eac80028af519282e3d.pdf"
  },
  {
    title: "Sakai Open 3-Year Roadmap",
    description: "Strategic planning overview from the Sakai release and roadmap wiki.",
    href: "https://sakaiproject.atlassian.net/wiki/spaces/REL/pages/1384677712/Sakai+s+Open+3-Year+Roadmap"
  }
];
---

<SectionPageLayout
  title="Conference Resources | Sakai LMS"
  description="Reference materials from Sakai's conference outreach, including EDUCAUSE resources and roadmap links."
  kicker="Conference Resources"
  heading="Resources For Conference Attendees"
>
  <article class="hard-border block-shadow-soft bg-[var(--sakai-paper)] p-6">
    <p class="text-lg leading-relaxed text-[var(--sakai-ink)]">
      The legacy Sakai site includes conference-oriented resources shared with EDUCAUSE participants and other event audiences.
    </p>
  </article>

  <section class="grid gap-4 md:grid-cols-3">
    {resources.map((resource) => (
      <a
        href={resource.href}
        target="_blank"
        rel="noreferrer"
        class="hard-border block-shadow-soft bg-white p-5 transition hover:-translate-x-0.5 hover:-translate-y-0.5"
      >
        <h2 class="sans text-2xl font-black uppercase text-[var(--sakai-ink)]">{resource.title}</h2>
        <p class="mt-3 text-sm leading-relaxed text-[var(--sakai-ink-soft)]">{resource.description}</p>
      </a>
    ))}
  </section>

  <section class="grid gap-4 md:grid-cols-2">
    <a href={withBase("/events")} class="hard-border block-shadow-soft bg-white p-5 transition hover:-translate-x-0.5 hover:-translate-y-0.5">
      <h2 class="sans text-xl font-black uppercase text-[var(--sakai-ink)]">Sakai Events</h2>
      <p class="mt-3 text-sm leading-relaxed text-[var(--sakai-ink-soft)]">Review conference sessions and event recordings.</p>
    </a>
    <a href={withBase("/accessibility")} class="hard-border block-shadow-soft bg-white p-5 transition hover:-translate-x-0.5 hover:-translate-y-0.5">
      <h2 class="sans text-xl font-black uppercase text-[var(--sakai-ink)]">Accessibility Materials</h2>
      <p class="mt-3 text-sm leading-relaxed text-[var(--sakai-ink-soft)]">Explore accessibility strategy and VPAT documents.</p>
    </a>
  </section>
</SectionPageLayout>

---
import SectionPageLayout from "../layouts/SectionPageLayout.astro";
const withBase = (path: string) =>
  `${import.meta.env.BASE_URL.replace(/\/$/, "")}/${path.replace(/^\/+/, "")}`;

const formatDate = (value: string) =>
  new Date(value).toLocaleDateString("en-US", {
    year: "numeric",
    month: "short",
    day: "numeric"
  });

const sakaiCon2023 = [
  {
    title: "SakaiCon23 Welcome and Sakai 23 Highlights",
    date: "2023-08-21T21:29:26.366Z",
    duration: "20:33",
    href: "https://www.youtube.com/watch?v=dXEi5gpWoNk"
  },
  {
    title: "The Plan Unidigital: Sakai Innovations from Spanish Universities",
    date: "2023-08-21T21:29:26.366Z",
    duration: "32:09",
    href: "https://www.youtube.com/watch?v=2u7S2Px0IIs"
  },
  {
    title: "Sakai Great Teaching Showcase",
    date: "2023-08-21T21:29:26.365Z",
    duration: "56:07",
    href: "https://www.youtube.com/watch?v=PEu1DPLOPi4"
  },
  {
    title: "Sakai Lessons: Julianne's 7 Favorite Things",
    date: "2023-08-21T21:29:26.364Z",
    duration: "30:13",
    href: "https://www.youtube.com/watch?v=lVKwn4Wxer8"
  },
  {
    title: "Found in Translation: Empowering Multilingualism in Sakai",
    date: "2023-08-21T21:29:26.364Z",
    duration: "32:51",
    href: "https://www.youtube.com/watch?v=SJs1zp2ZNks"
  },
  {
    title: "Creative Approaches to Assessment in Sakai",
    date: "2023-08-21T21:29:26.363Z",
    duration: "33:07",
    href: "https://www.youtube.com/watch?v=upe_M47P4XU"

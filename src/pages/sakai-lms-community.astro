  {
    name: "EDF",
    description:
      "Global education technology company providing Sakai cloud services, development, and support for next-generation learning practice.",
    href: "https://www.edf.global"
  },
  {
    name: "Learning Experiences",
    description:
      "Focused on adding value to Apereo communities and encouraging open source and open content in education.",
    href: "https://www.learnxp.com"
  },
  {
    name: "Longsight",
    description:
      "Leading developer of new Sakai functionality, with cloud hosting and support services for Sakai institutions.",
    href: "https://www.longsight.com"
  }
];

const pmcMembers = [
  "David Bauer, University of Dayton",
  "Noah Botimer, University of Michigan",
  "Adrian Fish, Learning Experiences",
  "Shawn Foster, Western University",
  "Wilma Hodges, Red Willow Solutions, LLC and Sakai Community Coordinator",
  "Dede Hourican, Marist University",
  "Matthew Jones, University of Michigan and Learning Experiences",
  "Kunal Jaykam, Learning Experiences",
  "Shoji Kajita, Nagoya University",
  "Chris Knapp, Knapp Strategic and Accessiversity",
  "Patrick Masson, Apereo Foundation",
  "Earle Nietzel, Longsight and Sakai Release Manager",
  "Sam Ottenhoff, Longsight Inc",
  "Juan Jose Merono Sanchez, University of Murcia",
  "Andrea Schmidt, Learning Experiences",
  "Christina Schwiebert, Northwest State",
  "Dr. Charles Severance, University of Michigan",
  "Steve Swinsburg, Flying Kite",
  "Joshua Wilson, Flywheel Strategies"
];

const communityStories = [
  {
    name: "Amy Drees",
    institution: "Northwestern State Community College"
  },
  {
    name: "Stella Erbes",
    institution: "Pepperdine University"
  },
  {
    name: "Wilbur Reed",
    institution: "Johnson University"
  }

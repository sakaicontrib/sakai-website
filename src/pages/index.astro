---
import BaseLayout from "../layouts/BaseLayout.astro";

const pillars = [
  {
    label: "Open Source",
    value: "100%",
    text: "No lock-in. No acquisition anxiety. Community ownership from day one."
  },
  {
    label: "Longevity",
    value: "20+",
    text: "Two decades of active releases, collaboration, and real production use."
  },
  {
    label: "Architecture",
    value: "Java",
    text: "Modern Java foundations built for performance, extensibility, and scale."
  },
  {
    label: "Leadership",
    value: "Higher Ed",
    text: "Created by educators for educators, with institutions guiding the roadmap."
  }
];

const features = [
  {
    title: "Robust Communications",
    description:
      "Sakai features group-aware tools with synchronous and asynchronous messaging, discussions, social connection, and collaborative workflows."
  },
  {
    title: "Easy LTI + API Integration",
    description:
      "Sakai is a leader in IMS LTI and provides an extensive API for deep native integration with third-party applications."
  },
  {
    title: "Community Educator-Built Tools",
    description:
      "Sakai community members build and share Sakai-specific tools outside packaged releases, and you can build your own."
  },
  {
    title: "Superlative Course Creation",
    description:
      "Create and organize lessons, resources, quizzes, assignments, media, and conditional releases in one coherent academic workflow."
  }
];

const testimonials = [
  {
    quote:
      "Sakai is feature-rich and robust. You can build a truly meaningful learning experience within Sakai that I have not seen in other LMS systems.",
    name: "Julianne Morgan",
    role: "University of Dayton",
    image: "/images/julianne-morgan.jpg"
  },
  {
    quote:
      "I love that colleges and universities shape the evolution of Sakai. Education, not profit, is the top priority of Sakai.",
    name: "Alan Regan",
    role: "Pepperdine University",
    image: "/images/alan-regan.jpg"
  },
  {
    quote:
      "The Sakai community encourages institutions and individuals to influence product features, strategy, and development in a tangible way.",
    name: "Dr. Wilma Hodges",
    role: "Sakai Community Manager",
    image: "/images/wilma-hodges.jpg"
  },
  {
    quote:
      "Because Sakai is open source, you can maintain control, possession, and ownership of your student data over the long term.",
    name: "Dr. Charles Severance",
    role: "Sakai Founding Architect",
    image: "/images/chuck-severance.jpg"
  }
];

const withBase = (path: string) =>
  `${import.meta.env.BASE_URL.replace(/\/$/, "")}/${path.replace(/^\/+/, "")}`;
---

<BaseLayout
  title="Sakai LMS | Open-Source Learning Built for Higher Ed"
  description="Sakai is a robust open-source LMS built by higher ed for higher ed, with two decades of community-led innovation on a modern Java foundation."
>
  <div class="min-h-screen">
    <div class="bg-[var(--sakai-ink)] px-4 py-2 text-center text-xs text-[var(--sakai-paper)] sm:text-sm">
      <span class="punch">Built by higher ed for higher ed</span>
      <span class="mx-2 text-[var(--sakai-aqua)]">|</span>
      20+ years of real open-source collaboration
    </div>

    <header class="bg-grid sticky top-0 z-40 border-b-2 border-[var(--sakai-black)] bg-[var(--sakai-paper)]/95 backdrop-blur">
      <nav class="mx-auto flex w-full max-w-7xl flex-wrap items-center justify-between gap-3 px-4 py-3 md:px-8">
        <a href="#top" class="flex items-center gap-3">
          <img src={withBase("/images/sakai-logo.png")} alt="Sakai logo" class="h-9 w-auto" />
          <span class="sans text-sm font-bold uppercase tracking-[0.18em] text-[var(--sakai-ink)]">Sakai LMS</span>
        </a>

        <div class="sans flex flex-wrap items-center gap-x-5 gap-y-2 text-sm font-semibold uppercase tracking-[0.08em] text-[var(--sakai-ink)]">
          <a href={withBase("/sakai-lms-features")} class="hover:text-[var(--sakai-terracotta)]">Features</a>
          <a href={withBase("/sakai-lms-community")} class="hover:text-[var(--sakai-terracotta)]">Community</a>
          <a href={withBase("/releases")} class="hover:text-[var(--sakai-terracotta)]">Releases</a>
          <a href={withBase("/events")} class="hover:text-[var(--sakai-terracotta)]">Events</a>
          <a href={withBase("/connect")} class="hover:text-[var(--sakai-terracotta)]">Connect</a>
          <a href={withBase("/shop")} class="hover:text-[var(--sakai-terracotta)]">Merch</a>
          <a href={withBase("/resources")} class="hover:text-[var(--sakai-terracotta)]">Resources</a>
        </div>

        <a
          href={withBase("/try-sakai-lms-free")}
          class="sans hard-border block-shadow-soft bg-[var(--sakai-terracotta)] px-4 py-2 text-sm font-bold uppercase tracking-[0.08em] text-white transition hover:-translate-x-0.5 hover:-translate-y-0.5"
        >
          Try Sakai
        </a>
      </nav>
    </header>

    <main id="top" class="mx-auto flex w-full max-w-7xl flex-col gap-16 px-4 pb-16 pt-8 md:px-8 md:pt-12">
      <section class="grid items-stretch gap-8 lg:grid-cols-[1.05fr_0.95fr]">
        <div class="reveal">
          <span class="ribbon sans text-xs uppercase tracking-[0.14em] md:text-sm">Two Decades. Still Community-Led.</span>

          <h1 class="sans mt-5 text-5xl leading-[0.92] font-black uppercase text-[var(--sakai-ink)] md:text-7xl xl:text-8xl">
            Great For Learning.<br />
            Built for<br class="hidden md:block" /> Higher Ed.
          </h1>

          <p class="mt-6 max-w-xl text-lg leading-relaxed text-[var(--sakai-ink)] md:text-xl">
            Sakai LMS helps instructors create truly inspiring learning experiences. Teachers and students love Sakai.
            Sakai innovates constantly using market leadership to advance education technology.
          </p>

          <p class="mt-4 max-w-xl text-base leading-relaxed text-[var(--sakai-ink-soft)] md:text-lg">
            Canvas, D2L, and Moodle are in the conversation, but Sakai stands apart as deeply collaborative open-source,
            built in modern Java, and directed by institutions that teach real students every day.
          </p>

          <div class="mt-8 flex flex-wrap gap-4">
            <a
              href="https://github.com/sakaiproject/sakai"
              class="sans hard-border block-shadow bg-[var(--sakai-ink)] px-5 py-3 text-sm font-bold uppercase tracking-[0.08em] text-white transition hover:-translate-x-1 hover:-translate-y-1"
            >
              View Source
            </a>
            <a
              href={withBase("/sakai-lms-community")}
              class="sans hard-border block-shadow bg-[var(--sakai-paper)] px-5 py-3 text-sm font-bold uppercase tracking-[0.08em] text-[var(--sakai-ink)] transition hover:-translate-x-1 hover:-translate-y-1"
            >
              Meet Community
            </a>
          </div>
        </div>

        <div class="reveal delay-1 relative">
          <div class="absolute -left-4 -top-4 hidden h-24 w-24 border-2 border-[var(--sakai-black)] bg-[var(--sakai-aqua)] md:block"></div>
          <article class="hard-border block-shadow relative overflow-hidden bg-[var(--sakai-paper)]">
            <img src={withBase("/images/abstract-hero.jpg")} alt="Sakai abstract brand texture" class="h-32 w-full object-cover md:h-36" />
            <div class="dot-grid p-4 md:p-6">
              <img
                src={withBase("/images/hero-device.png")}
                alt="Sakai course overview on laptop and student account on phone"
                class="hard-border h-auto w-full bg-white object-cover"
                loading="eager"
              />
              <div class="mt-5 grid gap-3 text-sm leading-relaxed text-[var(--sakai-ink)] md:grid-cols-3 md:text-base">
                <div class="hard-border bg-white p-3">
                  <p class="sans text-xs font-bold uppercase tracking-[0.08em] text-[var(--sakai-terracotta)]">Meaningful</p>
                  <p>Course-centered workflows that support better teaching outcomes.</p>
                </div>
                <div class="hard-border bg-white p-3">
                  <p class="sans text-xs font-bold uppercase tracking-[0.08em] text-[var(--sakai-terracotta)]">Participatory</p>
                  <p>Community governance where institutions shape the roadmap directly.</p>
                </div>
                <div class="hard-border bg-white p-3">
                  <p class="sans text-xs font-bold uppercase tracking-[0.08em] text-[var(--sakai-terracotta)]">Privacy-First</p>
                  <p>Open-source control over long-term student and institutional data.</p>
                </div>
              </div>
            </div>
          </article>
        </div>
      </section>

      <section class="reveal delay-2 grid gap-4 sm:grid-cols-2 xl:grid-cols-4">
        {pillars.map((pillar) => (
          <article class="hard-border block-shadow-soft bg-[var(--sakai-paper)] p-5">
            <p class="sans text-xs font-bold uppercase tracking-[0.1em] text-[var(--sakai-terracotta)]">{pillar.label}</p>
            <p class="sans mt-2 text-4xl font-black uppercase text-[var(--sakai-ink)]">{pillar.value}</p>
            <p class="mt-3 text-sm leading-relaxed text-[var(--sakai-ink-soft)]">{pillar.text}</p>
          </article>
        ))}
      </section>

      <section class="grid items-center gap-8 lg:grid-cols-[0.95fr_1.05fr]">
        <div class="reveal delay-1 hard-border block-shadow overflow-hidden bg-[var(--sakai-paper)]">
          <img
            src={withBase("/images/educators.jpg")}
            alt="Educator teaching a diverse group of college students"
            class="h-full min-h-80 w-full object-cover"
            loading="lazy"
          />
        </div>

        <div class="reveal delay-2">
          <h2 class="sans text-4xl leading-none font-black uppercase text-[var(--sakai-ink)] md:text-6xl">
            Created by<br /> Educators for Educators
          </h2>
          <p class="mt-6 max-w-2xl text-lg leading-relaxed text-[var(--sakai-ink)]">
            Faculty members and teachers work tirelessly to teach their students, whether in person or online.
            Sakai's greatest strength is that it is fully open source and created by educators who actively refine the platform.
          </p>
          <p class="mt-4 max-w-2xl text-base leading-relaxed text-[var(--sakai-ink-soft)]">
            Sakai helps institutions prioritize pedagogy over procurement cycles, gives teams direct influence on product direction,
            and supports both traditional and digitally rich classrooms.
          </p>
        </div>
      </section>

      <section id="features" class="reveal delay-1">
        <div class="mb-6 flex flex-wrap items-end justify-between gap-4">
          <h2 class="sans text-4xl leading-none font-black uppercase text-[var(--sakai-ink)] md:text-6xl">
            Sakai's Exceptional Features
          </h2>
          <span class="ribbon sans text-xs uppercase tracking-[0.12em] md:text-sm">No Vendor Lock-In</span>
        </div>

        <div class="grid gap-4 md:grid-cols-2">
          {features.map((feature, index) => (
            <article class="hard-border block-shadow-soft bg-[var(--sakai-paper)] p-6">
              <p class="sans text-xs font-bold uppercase tracking-[0.1em] text-[var(--sakai-terracotta)]">0{index + 1}</p>
              <h3 class="sans mt-2 text-2xl font-extrabold uppercase text-[var(--sakai-ink)]">{feature.title}</h3>
              <p class="mt-3 text-base leading-relaxed text-[var(--sakai-ink-soft)]">{feature.description}</p>
            </article>
          ))}
        </div>
      </section>

      <section class="reveal delay-2">
        <h2 class="sans text-4xl leading-none font-black uppercase text-[var(--sakai-ink)] md:text-6xl">Community Voices</h2>
        <div class="mt-6 grid gap-4 md:grid-cols-2">
          {testimonials.map((item) => (
            <figure class="hard-border block-shadow-soft bg-[var(--sakai-paper)] p-5">
              <blockquote class="text-base leading-relaxed text-[var(--sakai-ink)]">"{item.quote}"</blockquote>
              <figcaption class="mt-4 flex items-center gap-3">
                <img src={withBase(item.image)} alt={item.name} class="hard-border h-14 w-14 rounded-full object-cover" loading="lazy" />
                <div>
                  <p class="sans text-sm font-bold uppercase tracking-[0.08em] text-[var(--sakai-ink)]">{item.name}</p>
                  <p class="text-sm text-[var(--sakai-ink-soft)]">{item.role}</p>
                </div>
              </figcaption>
            </figure>
          ))}
        </div>
      </section>

      <section id="community" class="grid gap-8 lg:grid-cols-[1fr_1fr]">
        <div class="reveal delay-1 hard-border block-shadow overflow-hidden bg-[var(--sakai-paper)]">
          <img
            src={withBase("/images/community-hands.jpg")}
            alt="Hands arranged in a light bulb shape representing Sakai's open-source community"
            class="h-full min-h-80 w-full object-cover"
            loading="lazy"
          />
        </div>

        <div class="reveal delay-2">
          <h2 class="sans text-4xl leading-none font-black uppercase text-[var(--sakai-ink)] md:text-6xl">
            The Secret to Leadership:<br /> Open-Source Community
          </h2>
          <p class="mt-5 text-lg leading-relaxed text-[var(--sakai-ink)]">
            Sakai is 100% open source, so you never have to worry that it will be acquired and altered. The community oversees,
            directs, manages, and advances Sakai together.
          </p>
          <p class="mt-4 text-base leading-relaxed text-[var(--sakai-ink-soft)]">
            Commercial affiliates develop, host, and support Sakai, including
            <a href="https://www.longsight.com" class="font-semibold underline">Longsight</a>,
            <a href="https://www.learnxp.com" class="font-semibold underline">Learning Experiences</a>, and
            <a href="https://www.edf.global" class="font-semibold underline">EDF</a>.
          </p>

          <div class="mt-7 flex flex-wrap gap-4">
            <a
              href={withBase("/sakai-lms-community")}
              class="sans hard-border block-shadow-soft bg-[var(--sakai-terracotta)] px-5 py-3 text-sm font-bold uppercase tracking-[0.08em] text-white transition hover:-translate-x-0.5 hover:-translate-y-0.5"
            >
              Community Members
            </a>
            <a
              href={withBase("/resources")}
              class="sans hard-border block-shadow-soft bg-[var(--sakai-paper)] px-5 py-3 text-sm font-bold uppercase tracking-[0.08em] text-[var(--sakai-ink)] transition hover:-translate-x-0.5 hover:-translate-y-0.5"
            >
              Resource Library
            </a>
          </div>
        </div>
      </section>

      <section id="java" class="reveal delay-3 hard-border block-shadow bg-[var(--sakai-ink)] p-6 text-[var(--sakai-paper)] md:p-8">
        <div class="grid gap-6 lg:grid-cols-[1.1fr_0.9fr] lg:items-center">
          <div>
            <p class="sans text-xs font-bold uppercase tracking-[0.14em] text-[var(--sakai-aqua)]">Engineering Direction</p>
            <h2 class="sans mt-3 text-4xl leading-none font-black uppercase md:text-6xl">Modern Java Core</h2>
            <p class="mt-5 max-w-2xl text-lg leading-relaxed text-[var(--sakai-paper)]/90">
              Sakai combines two decades of proven LMS depth with modern Java foundations and a forward-looking open-source roadmap.
              Institutions can extend, integrate, and operate Sakai with confidence.
            </p>
          </div>
          <div class="grid gap-3">
            <div class="hard-border bg-[var(--sakai-paper)]/8 p-3 text-sm font-medium">Enterprise-grade reliability for large university deployments</div>
            <div class="hard-border bg-[var(--sakai-paper)]/8 p-3 text-sm font-medium">API-first integration with institutional and third-party systems</div>
            <div class="hard-border bg-[var(--sakai-paper)]/8 p-3 text-sm font-medium">Open governance and transparent development priorities</div>
            <div class="hard-border bg-[var(--sakai-paper)]/8 p-3 text-sm font-medium">Control of student data, roadmap input, and long-term ownership</div>
          </div>
        </div>
      </section>

      <section id="resources" class="reveal delay-3 hard-border block-shadow bg-[var(--sakai-paper)] p-6 md:p-8">
        <h2 class="sans text-4xl leading-none font-black uppercase text-[var(--sakai-ink)] md:text-6xl">Evaluate Sakai For Your Institution</h2>
        <p class="mt-5 max-w-3xl text-lg leading-relaxed text-[var(--sakai-ink)]">
          Use these direct paths for technical evaluation, implementation planning, and engagement with the Sakai open-source community.
        </p>
        <div class="mt-6 grid gap-4 md:grid-cols-4">
          <a href={withBase("/try-sakai-lms-free")} class="hard-border block-shadow-soft bg-white p-4 transition hover:-translate-x-0.5 hover:-translate-y-0.5">
            <p class="sans text-sm font-extrabold uppercase tracking-[0.08em] text-[var(--sakai-terracotta)]">Try Sakai</p>
            <p class="mt-2 text-sm leading-relaxed text-[var(--sakai-ink-soft)]">Request a trial and evaluate your migration fit.</p>
          </a>
          <a href={withBase("/resources")} class="hard-border block-shadow-soft bg-white p-4 transition hover:-translate-x-0.5 hover:-translate-y-0.5">
            <p class="sans text-sm font-extrabold uppercase tracking-[0.08em] text-[var(--sakai-terracotta)]">Resources</p>
            <p class="mt-2 text-sm leading-relaxed text-[var(--sakai-ink-soft)]">Documentation, stories, and community guidance.</p>
          </a>
          <a href={withBase("/releases")} class="hard-border block-shadow-soft bg-white p-4 transition hover:-translate-x-0.5 hover:-translate-y-0.5">
            <p class="sans text-sm font-extrabold uppercase tracking-[0.08em] text-[var(--sakai-terracotta)]">Releases</p>
            <p class="mt-2 text-sm leading-relaxed text-[var(--sakai-ink-soft)]">Current version lines, technical notes, and source distribution links.</p>
          </a>
          <a href={withBase("/sakai-news")} class="hard-border block-shadow-soft bg-white p-4 transition hover:-translate-x-0.5 hover:-translate-y-0.5">
            <p class="sans text-sm font-extrabold uppercase tracking-[0.08em] text-[var(--sakai-terracotta)]">News</p>
            <p class="mt-2 text-sm leading-relaxed text-[var(--sakai-ink-soft)]">See community updates, roadmap stories, and release-era highlights.</p>
          </a>
        </div>
      </section>
    </main>

    <footer class="border-t-2 border-[var(--sakai-black)] bg-[var(--sakai-paper)]">
      <div class="mx-auto flex w-full max-w-7xl flex-col gap-6 px-4 py-8 md:px-8 lg:flex-row lg:items-center lg:justify-between">
        <a href="#top" class="flex items-center gap-3">
          <img src={withBase("/images/sakai-logo.png")} alt="Sakai logo" class="h-10 w-auto" />
          <p class="sans text-xs font-bold uppercase tracking-[0.14em] text-[var(--sakai-ink)]">Real Open Source Learning</p>
        </a>

        <nav class="sans flex flex-wrap gap-4 text-xs font-bold uppercase tracking-[0.12em] text-[var(--sakai-ink)]">
          <a href="https://github.com/sakaiproject/sakai" class="hover:text-[var(--sakai-terracotta)]">GitHub</a>
          <a href={withBase("/events")} class="hover:text-[var(--sakai-terracotta)]">Events</a>
          <a href={withBase("/connect")} class="hover:text-[var(--sakai-terracotta)]">Connect</a>
          <a href={withBase("/shop")} class="hover:text-[var(--sakai-terracotta)]">Merch</a>
          <a href={withBase("/releases")} class="hover:text-[var(--sakai-terracotta)]">Releases</a>
          <a href={withBase("/sakai-lms-community")} class="hover:text-[var(--sakai-terracotta)]">Community</a>
          <a href={withBase("/resources")} class="hover:text-[var(--sakai-terracotta)]">Resources</a>
          <a href={withBase("/accessibility")} class="hover:text-[var(--sakai-terracotta)]">Accessibility</a>
        </nav>

        <p class="text-sm text-[var(--sakai-ink-soft)]">Â© {new Date().getFullYear()} Sakai Project</p>
      </div>
    </footer>
  </div>
</BaseLayout>
